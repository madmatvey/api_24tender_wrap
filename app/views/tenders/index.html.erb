<%- model_class = Tender -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:tid) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:contracttype) %></th>
      <th><%= model_class.human_attribute_name(:purchasestatus) %></th>
      <th><%= model_class.human_attribute_name(:changedate) %></th>
      <th><%= model_class.human_attribute_name(:purchasestart) %></th>
      <th><%= model_class.human_attribute_name(:purchasefinishdate) %></th>
      <th><%= model_class.human_attribute_name(:purchaseplace) %></th>
      <th><%= model_class.human_attribute_name(:contractdate) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:pricetext) %></th>
      <th><%= model_class.human_attribute_name(:finishprice) %></th>
      <th><%= model_class.human_attribute_name(:contractsubject) %></th>
      <th><%= model_class.human_attribute_name(:tenderofficiallink) %></th>
      <th><%= model_class.human_attribute_name(:tenderofficialname) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:link) %></th>
      <th><%= model_class.human_attribute_name(:tenderclassific) %></th>
      <th><%= model_class.human_attribute_name(:paymentform) %></th>
      <th><%= model_class.human_attribute_name(:paymentcondition) %></th>
      <th><%= model_class.human_attribute_name(:tradecategory) %></th>
      <th><%= model_class.human_attribute_name(:registereddate) %></th>
      <th><%= model_class.human_attribute_name(:purchasedestination) %></th>
      <th><%= model_class.human_attribute_name(:contactwith) %></th>
      <th><%= model_class.human_attribute_name(:contactwithposition) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tenders.each do |tender| %>
      <tr>
        <td><%= link_to tender.id, tender_path(tender) %></td>
        <td><%= tender.name %></td>
        <td><%= tender.contracttype %></td>
        <td><%= tender.purchasestatus %></td>
        <td><%= tender.changedate %></td>
        <td><%= tender.purchasestart %></td>
        <td><%= tender.purchasefinishdate %></td>
        <td><%= tender.purchaseplace %></td>
        <td><%= tender.contractdate %></td>
        <td><%= tender.price %></td>
        <td><%= tender.pricetext %></td>
        <td><%= tender.finishprice %></td>
        <td><%= tender.contractsubject %></td>
        <td><%= tender.tenderofficiallink %></td>
        <td><%= tender.tenderofficialname %></td>
        <td><%= tender.comment %></td>
        <td><%= tender.link %></td>
        <td><%= tender.tenderclassific %></td>
        <td><%= tender.paymentform %></td>
        <td><%= tender.paymentcondition %></td>
        <td><%= tender.tradecategory %></td>
        <td><%= tender.registereddate %></td>
        <td><%= tender.purchasedestination %></td>
        <td><%= tender.contactwith %></td>
        <td><%= tender.contactwithposition %></td>
        <td><%=l tender.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tender_path(tender), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tender_path(tender),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tender_path,
            :class => 'btn btn-primary' %>
