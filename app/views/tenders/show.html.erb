<%- model_class = Tender -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @tender.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contracttype) %>:</strong></dt>
  <dd><%= @tender.contracttype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchasestatus) %>:</strong></dt>
  <dd><%= @tender.purchasestatus %></dd>
  <dt><strong><%= model_class.human_attribute_name(:changedate) %>:</strong></dt>
  <dd><%= @tender.changedate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchasestart) %>:</strong></dt>
  <dd><%= @tender.purchasestart %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchasefinishdate) %>:</strong></dt>
  <dd><%= @tender.purchasefinishdate %></dd>

  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @tender.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:link) %>:</strong></dt>
  <dd><%= @tender.link %></dd>

  <dt><strong><%= model_class.human_attribute_name(:paymentcondition) %>:</strong></dt>
  <dd><%= @tender.paymentcondition %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tradecategory) %>:</strong></dt>
  <dd><%= @tender.tradecategory %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registereddate) %>:</strong></dt>
  <dd><%= @tender.registereddate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchasedestination) %>:</strong></dt>
  <dd><%= @tender.purchasedestination %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contactwith) %>:</strong></dt>
  <dd><%= @tender.contactwith %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contactwithposition) %>:</strong></dt>
  <dd><%= @tender.contactwithposition %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              tenders_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tender_path(@tender), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tender_path(@tender),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
